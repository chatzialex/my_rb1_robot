<?xml version="1.0"?>

<robot name="my_rb1">
    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="front_caster">
        <material>Gazebo/Grey</material>
        <mu1>0</mu1>
        <mu2>0</mu2>
    </gazebo>
    <gazebo reference="back_caster">
        <material>Gazebo/Grey</material>
        <mu1>0</mu1>
        <mu2>0</mu2>
    </gazebo>
    <gazebo reference="left_wheel">
        <material>Gazebo/Grey</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Grey</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>        
    <gazebo reference="base_link_to_front_caster">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>
    <gazebo reference="base_link_to_back_caster">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>

    <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
        <alwaysOn>true</alwaysOn>
        <updateRate>20</updateRate>
        <leftJoint>base_link_to_left_wheel</leftJoint>
        <rightJoint>base_link_to_right_wheel</rightJoint>
        <wheelSeparation>0.40</wheelSeparation>
        <wheelDiameter>0.05</wheelDiameter>
        <torque>10</torque>
        <commandTopic>cmd_vel</commandTopic>
        <odometryTopic>odom</odometryTopic>
        <odometryFrame>odom</odometryFrame>
        <robotBaseFrame>base_link</robotBaseFrame>
    </plugin>
    </gazebo>

    <gazebo reference="front_laser">
    <sensor type="ray" name="head_hokuyo_sensor">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>20</update_rate>
        <ray>
            <scan>
                <horizontal>
                    <samples>720</samples>
                    <resolution>1</resolution>
                    <min_angle>-1.570796</min_angle>
                    <max_angle>1.570796</max_angle>
                </horizontal>
            </scan>
            <range>
                <min>0.01</min>
                <max>10.0</max>
                <resolution>0.01</resolution>
            </range>
            <noise>
                <type>gaussian</type>
                <mean>0.0</mean>
                <stddev>0.01</stddev>
            </noise>
        </ray>
        <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
            <topicName>/scan</topicName>
            <frameName>sensor_laser</frameName>
        </plugin>
    </sensor>
    </gazebo>

    <material name="Red">
        <color rgba="0.7 0.1 0.1 1" />
    </material>

    <material name="DarkBlue">
        <color rgba="0.2 0.2 0.4 1" />
    </material>

    <material name="Gray">
        <color rgba="0.6 0.6 0.6 1" />
    </material>
    
    <link name="base_footprint"/>
    
    <joint name="base_footprint_to_base_link" type="fixed">
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <joint_properties damping="1.0" friction="1.0" />
    </joint> 

    <link name="base_link">
        <inertial>
            <mass value="25"/>
            <inertia ixx="0.578" ixy="0.0" ixz="0.0" iyy="0.578" iyz="0.0" izz="0.13"/>
        </inertial>

        <collision>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
        </collision>

        <visual>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
            <material name="DarkBlue"/>
        </visual>
    </link>

    <joint name="base_link_to_right_wheel" type="continuous">
        <origin xyz="0 -0.2 -0.15" rpy="0 0 0"/>
        <axis xyz = "0 1 0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="right_wheel">
        <inertial>
            <mass value="1"/>
            <inertia ixx="1.896e-4" ixy="0" ixz="0" iyy="5.208e-5" iyz="0" izz="1.896e-4"/>
        </inertial>

        <collision>
            <origin xyz = "0 0 0" rpy="1.57 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz = "0 0 0" rpy="1.57 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="Red"/>
        </visual>
    </link>

    <joint name="base_link_to_left_wheel" type="continuous">
        <origin xyz="0 0.2 -0.15" rpy="0 0 0"/>
        <axis xyz = "0 1 0"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="left_wheel">
        <inertial>
            <mass value="1"/>
            <inertia ixx="1.896e-4" ixy="0" ixz="0" iyy="5.208e-5" iyz="0" izz="1.896e-4"/>
        </inertial>

        <collision>
            <origin xyz = "0 0 0" rpy="1.57 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz = "0 0 0" rpy="1.57 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="Red"/>
        </visual>    
    </link>
 
    <joint name="base_link_to_front_caster" type="fixed">
        <origin xyz="0.1 0.0 -0.15" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="front_caster"/>
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="front_caster">
        <inertial>
            <!--assuming 0.5kg for each of the two bodies comprising the caster-->
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="2.17e-4" ixy="0" ixz="0" iyy="2.17e-4" iyz="0" izz="1.8e-4"/>
        </inertial>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 -0.003" />
            <geometry>
                <sphere radius="0.02" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.003" />
            <geometry>
                <sphere radius="0.02" />
            </geometry>
            <material name="DarkBlue"/>
        </visual>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 -0.015" />
            <geometry>
                <sphere radius="0.01" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.015" />
            <geometry>
                <sphere radius="0.01" />
            </geometry>
            <material name="Gray"/>
        </visual>
    </link>

    <joint name="base_link_to_back_caster" type="fixed">
        <origin xyz="-0.1 0.0 -0.15" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="back_caster"/>
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="back_caster">
        <inertial>
        <mass value="1" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="2.17e-4" ixy="0" ixz="0" iyy="2.17e-4" iyz="0" izz="1.8e-4"/>
        </inertial>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 -0.003" />
            <geometry>
                <sphere radius="0.02" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.003" />
            <geometry>
                <sphere radius="0.02" />
            </geometry>
            <material name="DarkBlue"/>
        </visual>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 -0.015" />
            <geometry>
                <sphere radius="0.01" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.015" />
            <geometry>
                <sphere radius="0.01" />
            </geometry>
            <material name="Gray"/>
        </visual>
    </link>

    <joint name="base_link_to_front_laser" type="fixed">
        <origin xyz="0.25 0.0 0.075" rpy="3.1416 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="front_laser"/>
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="front_laser"/>
</robot>